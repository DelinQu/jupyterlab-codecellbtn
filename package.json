{
  "name": "@ibqn/jupyterlab-codecellbtn",
  "version": "0.1.0",
  "description": "Extension for adding 'run' buttons to each code cell",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "license": "BSD-3-Clause",
  "author": "Evgeny Bobkin",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibqn/jupyterlab-codecellbtn.git"
  },
  "main": "lib/index.js",
  "style": "style/index.css",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "clean": "rimraf lib",
    "prepare": "npm run clean && npm run build",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/react": "^16.8.24",
    "@types/react-dom": "^16.8.5",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@jupyterlab/application": "^1.0.2",
    "@jupyterlab/apputils": "^1.0.2",
    "@jupyterlab/cells": "^1.0.2",
    "@jupyterlab/notebook": "^1.0.2",
    "@phosphor/coreutils": "^1.3.1",
    "@types/node": "^12.6.9",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "jupyterlab": {
    "extension": true
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
